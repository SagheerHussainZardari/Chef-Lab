<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/dish_card"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:elevation="16dp"
        app:cardBackgroundColor="#0fff01"
        app:cardCornerRadius="16dp"

        app:cardElevation="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_dishImage"
                android:layout_width="match_parent"
                android:layout_height="350px"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <TextView
                android:id="@+id/tv_dish_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:text="dish name"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/iv_dishImage" />

            <TextView
                android:id="@+id/tv_ingredents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="8dp"
                android:text="Ingredents: "
                android:textColor="#fff"
                android:textSize="16sp"

                app:layout_constraintTop_toBottomOf="@+id/tv_dish_name" />


            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="8dp"
                android:text="Duration: "
                android:textColor="#fff"

                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_ingredents" />

            <TextView
                android:id="@+id/tv_cookingMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="8dp"
                android:text="Reciepe: "
                android:textColor="#fff"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_duration" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>
</LinearLayout>