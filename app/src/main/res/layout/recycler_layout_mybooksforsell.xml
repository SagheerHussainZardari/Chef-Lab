<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBookMyBooksForSell"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/iv_BookImageMyBooksForSell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1.5"
                android:src="@drawable/ic_email" />

            <TextView
                android:id="@+id/tv_BookNameMyBooksForSell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="2"
                android:paddingLeft="8dp"
                android:text="Book Name Will Be here Book Name Will Be here Book Name Will Be here Book Name Will Be here"
                android:textColor="#fff"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_EditMyBooksForSell"
                android:layout_width="0dp"
                android:layout_margin="4dp"
                android:layout_height="match_parent"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:layout_weight="1.5"
                app:icon="@drawable/ic_editprofile" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_DeleteMyBooksForSell"
                android:layout_width="0dp"
                android:layout_margin="4dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                app:icon="@drawable/ic_delete" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>